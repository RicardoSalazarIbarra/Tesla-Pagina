---
import Section from "./Section.astro";
---

<Section title="Model Y" color="white">
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="bg-gray-200 text-sm rounded font-medium px-16 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
      Orden personalizada
    </a>
    <a
      class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-16 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="#"
    >
      Prueba de manejo
    </a>
  </div>

  <video
    slot="background"
    class="object-center object-cover h-full w-full"
    autoplay
    muted
    loop
    src="/video-model-y.webm"></video>
</Section>
